<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaoneaw.moopiing.sharingpayment.MainActivity"
    android:background="#87d9ff">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_menu_new_room"
        android:src="@drawable/btn_menu_new_room"
        android:background="#87d9ff"
        android:layout_above="@+id/btn_menu_add_money"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_menu_join_room"
        android:src="@drawable/btn_menu_join_room"
        android:background="#87d9ff"
        android:layout_above="@+id/btn_menu_lend_money"
        android:layout_alignLeft="@+id/btn_menu_lend_money"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_menu_add_money"
        android:src="@drawable/btn_menu_add_money"
        android:background="#87d9ff"
        android:layout_above="@+id/btn_menu_history"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_menu_lend_money"
        android:src="@drawable/btn_menu_lend_money"
        android:background="#87d9ff"
        android:layout_above="@+id/btn_menu_history"
        android:layout_alignRight="@+id/btn_menu_history"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_menu_history"
        android:src="@drawable/btn_menu_info"
        android:background="#87d9ff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_menu_logout"
        android:src="@drawable/btn_menu_logout"
        android:background="#87d9ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Balance"
        android:id="@+id/tv_balance"
        android:layout_below="@+id/btn_menu_logout"
        android:layout_alignLeft="@+id/btn_menu_new_room"
        android:layout_alignStart="@+id/btn_menu_new_room"
        android:textColor="#006fd7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_string_balance"
        android:background="@drawable/img_bg_number"
        android:layout_below="@+id/btn_menu_logout"
        android:layout_toRightOf="@+id/tv_balance"
        android:layout_toEndOf="@+id/tv_balance"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

</RelativeLayout>
