<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:background="#2787A4"
    >


    <TextView
        android:layout_height="match_parent"
        android:layout_width="50dp"
        android:id="@+id/t_id"
        android:layout_alignParentLeft="true"
        android:text="id"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="125dp"
        android:id="@+id/t_uname"
        android:layout_toRightOf="@id/t_id"
        android:text="uname"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
    />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="125dp"
        android:id="@+id/t_pass"
        android:layout_toRightOf="@id/t_uname"
        android:text="pass"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:id="@+id/t_balance"
        android:layout_toRightOf="@id/t_pass"
        android:text="balance"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />




</RelativeLayout>