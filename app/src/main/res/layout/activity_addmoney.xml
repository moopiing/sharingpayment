<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaoneaw.moopiing.sharingpayment.AddMoneyActivity"
    android:background="#87d9ff">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:src="@drawable/btn_add"
        android:background="#87d9ff"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Balance"
        android:id="@+id/tv_my_balance"
        android:layout_marginTop="75dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="35dp"
        android:textColor="#006fd7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_string_balance"
        android:background="@drawable/img_bg_number"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_my_balance"
        android:layout_toEndOf="@+id/tv_my_balance"
        android:layout_alignBottom="@+id/tv_my_balance"
        android:textSize="30dp"
        android:layout_marginLeft="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Amount"
        android:id="@+id/tv_enter_amount"
        android:layout_below="@+id/tv_my_balance"
        android:layout_alignLeft="@+id/tv_my_balance"
        android:layout_alignStart="@+id/tv_my_balance"
        android:layout_marginTop="90dp"
        android:textColor="#006fd7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_input_amount"
        android:layout_below="@+id/tv_enter_amount"
        android:layout_alignLeft="@+id/tv_enter_amount"
        android:layout_alignStart="@+id/tv_enter_amount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:textColor="#0084ff" />
</RelativeLayout>